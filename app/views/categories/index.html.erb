<div class="w-full mt-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Categorias" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-blue-800 px-5 py-3 rounded-l">Categorias</h1>
    <%= link_to "Nova categoria", new_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium hover:bg-blue-700" %>
  </div>

  <div class=" mt-5">
    <table class="min-w-full divide-y divide-blue-100">
      <thead class="bg-blue-400">
        <tr>
          <th class="px-6 py-3 text-left text-blue-900 font-bold">Nome</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-blue-100">
        <% @categories.each.with_index do |category, index| %>
          <tr class="<%= index.odd? ? 'bg-blue-50' : 'bg-blue-100' %>">
            <td class="px-6 py-4 whitespace-nowrap"><%= category.name %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to "Editar categoria", edit_category_path(category), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-blue-600 hover:bg-blue-200" %>
              <%= link_to "Remover categoria", category, method: :delete, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-blue-600 hover:bg-blue-200" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
