<div class="mx-auto md:w-2/3 w-full flex flex-col mt-16">
  <div class="mx-auto bg-white p-6 rounded-lg shadow-md">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
    <% end %>

    <div class="my-5 relative" style="z-index: 1;">
      <div data-controller="map" data-map-readonly-value="true" style="position: relative; z-index: 1;">
        <div data-map-target="container" style="min-height: 300px; z-index: 1;"></div>
        <input type="hidden" data-map-target="latitude" value="<%= @company.latitude %>">
        <input type="hidden" data-map-target="longitude" value="<%= @company.longitude %>">
      </div>
    </div>

    <div class="my-5">
      <h1 class="block text-[2.5rem] leading-5 font-bold text-blue-800"><%= @company.name %></h1>
    </div>

    <ul class="my-5 bg-gray-50 p-4 rounded-lg shadow-inner">
      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Categoria:</strong>
        <%= @company.category %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">CEP:</strong>
        <%= @company.zipcode %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Endereço:</strong>
        <%= @company.address_map %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Número:</strong>
        <%= @company.number %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Bairro:</strong>
        <%= @company.neighborhood %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Cidade:</strong>
        <%= @company.city %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Estado:</strong>
        <%= @company.state %>
      </li>

      <li class="mb-3">
        <strong class="block font-medium mb-1 text-blue-800">Descrição:</strong>
        <%= @company.description %>
      </li>
    </ul>

    <div class="flex mt-10 space-x-4">
      <%= link_to "Editar esta empresa", edit_company_path(@company), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-blue-600 hover:bg-blue-200" %>
      <%= link_to "Voltar para empresas", companies_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-blue-600 hover:bg-blue-200" %>
      <%= button_to "Deletar esta empresa", @company, method: :delete, class: "rounded-lg py-3 px-5 bg-red-100 inline-block font-medium text-red-600 hover:bg-red-200" %>
    </div>
  </div>
</div>
