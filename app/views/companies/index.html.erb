<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Companies" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl text-blue-800 px-5 py-3 rounded-lg">Empresas</h1>
    <%= link_to "Nova empresa", new_company_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="">
    <table class="min-w-full divide-y divide-blue-100 mt-5">
      <thead class="bg-blue-400">
        <tr>
          <th class="px-6 py-3 text-left text-blue-900 font-bold">Nome</th>
          <th class="px-6 py-3 text-left text-blue-900 font-bold">Categoria</th>
          <th class="px-6 py-3 text-left text-blue-900 font-bold">Endere√ßo</th>
          <th class="px-6 py-3 text-left text-blue-900 font-bold">Bairro</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-blue-100">
        <% @companies.each.with_index do |company, index| %>
          <div data-controller="map" data-map-readonly-value="true">
            <tr class="<%= index.odd? ? 'bg-blue-50' : 'bg-blue-100' %>">
              <td class="px-6 py-4 whitespace-nowrap"><%= company.name %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= company.category %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= company.address_map %></td>
              <td class="px-6 py-4 whitespace-nowrap"><%= company.neighborhood %></td>

              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to "Detalhes", company, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-blue-600 hover:bg-blue-200" %>
              </td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
